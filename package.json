{
  "name": "habbit-tracker",
  "version": "0.1.0",
  "description": "A habbit and goal tracker!",
  "main": "index.js",
  "scripts": {
    "start": "run-p server sass watch:js copy:js",
    "server": "browser-sync start --server src --serveStatic .tmp --files .tmp, \"src/**/*.html\"",
    "sass": "node-sass src/styles/main.scss .tmp/styles/main.css -w",
    "watch:js": "onchange \"src/scripts/**/*.js\" -- npm run copy:js",
    "copy:js": "copyfiles --up 2 --all src/scripts/**/* .tmp/scripts"
  },
  "author": "Heydar Shams",
  "license": "ISC"
}
